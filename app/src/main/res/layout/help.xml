<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp">

    <TextView
        android:text="Help :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="38dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text='You can add as many subject as you want by pressing "+" or "Add subject" button at home screen.'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="40dp"
        android:id="@+id/textView15"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:alpha="0.5"/>

    <TextView
        android:text='Subject details are editable. You can edit any subject by pressing the card of particular subject. If count of attendance was incremented by mistake, it can be edited on edit subject window.'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="11dp"
        android:id="@+id/textView16"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:alpha="0.5"/>

    <TextView
        android:text='You can delete the subject by two ways. Press and hold on the subject card to remove it or go to the edit window and press remove button.'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="11dp"
        android:id="@+id/textView17"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:alpha="0.5"/>

    <TextView
        android:text='Attendance count can be incremented by pressing appropriate  "+" sign on the subject card. Also you can go to edit subject window and change the count of the attendance.'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="11dp"
        android:id="@+id/textView18" android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:alpha="0.5"/>




</RelativeLayout>