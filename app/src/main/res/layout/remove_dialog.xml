<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Are you sure to remove this Subject ?"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="30sp"
        android:paddingRight="50sp"
        android:paddingLeft="50sp"
        android:paddingTop="30sp"
        android:background="@drawable/subject_row_background"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:orientation="horizontal"
        android:layout_marginTop="-20sp">

        <ImageButton
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/above_required_background"
            android:clickable="true"
            android:padding="15sp"
            android:src="@drawable/vector_asset_done"
            android:layout_marginRight="55sp" />

        <ImageButton
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_remove_subject"
            android:clickable="true"
            android:padding="16sp"
            android:src="@drawable/vector_asset_close"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>