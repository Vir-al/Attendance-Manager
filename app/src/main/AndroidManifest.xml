<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.viral.personalattendancemanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/home_background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddSubject" />
        <activity android:name=".creditsHelpFeedbackActivity" />
        <activity android:name=".EditSubject"></activity>
    </application>

</manifest>